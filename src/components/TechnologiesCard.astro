---
import { Image } from "@astrojs/image/components";

export interface Props {
    name: string;
    src: string;
}

const { name, src } = Astro.props;
---

<div class="flex flex-col items-center justify-center mt-2">
    <Image
        class="rounded object-scale-down"
        src={src}
        alt={name}
        width={48}
        height={48}
    />
    <p class="mt-1">{ name }</p>
</div>
