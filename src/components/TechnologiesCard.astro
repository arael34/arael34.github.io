---
export interface Props {
    name: string;
    src: string;
}

const { name, src } = Astro.props;
---

<div class="flex flex-col items-center justify-center mr-14 mt-2">
    <img class="w-12 h-12 rounded object-scale-down" src={src} alt={name}>
    <h2 class="mt-1">{ name }</h2>
</div>
