---
import Layout from "./Layout.astro";
import ToggleTheme from "../components/ToggleTheme.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
    <main>
        <div class="header text-right mb-4">
            <a class="align-top mr-1" href="/">Home</a>
            <ToggleTheme />
        </div>
        <div>
            <slot />
        </div>
    </main>
</Layout>
