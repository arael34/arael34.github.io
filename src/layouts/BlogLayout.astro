---
import Layout from "./Layout.astro";
import ToggleTheme from "../components/ToggleTheme.astro";

export interface Props {
	title: string;
    date: string;
}

const { title, date } = Astro.props;
---

<Layout title={title}>
    <main>
        <div class="header text-right mb-4">
            <a class="align-top mr-1" href="/">Home</a>
            <ToggleTheme />
        </div>
        <p class="text-xl my-6 mx-1"><a href="/blog">&#x2190; Back</a></p>
        <h1 class="text-3xl text-gradient mb-2">{title}</h1>
        <h2>{date}</h2>
        <slot />
    </main>
</Layout>
